				<% @achievement.each do | a | %>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title"><%= a.name %></h3>
							<span class="label label-default">Achievement</span>
						</div>
						<div class="panel-body">
							<%= a.description%><br>
							<div class="btn-toolbar button_group" role="group">	
								<%= button_to "Edit", achievements_edit_path(a), :method => :get, :class => "option_button btn btn-default btn-xs" %>
								<%= button_to "Delete", achievements_delete_path(a), :method => :delete, :class => "option_button btn btn-default btn-xs" %>
							</div>
						</div>
					</div>
        		<% end %>
     		 </div>
		</div>
	</body>
